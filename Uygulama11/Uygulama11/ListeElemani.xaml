<UserControl x:Class="Uygulama11.ListeElemani"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uygulama11"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="BtnSola" Grid.Column="0" Content="&lt;" Click="BtnSola_Click" />
        <Button x:Name="BtnSaga" Grid.Column="2" Content="&gt;" Click="BtnSaga_Click" />
        <Label x:Name="LblIcerik" Grid.Column="1" Content="DENEME" FontSize="24"/>
    </Grid>
</UserControl>
