<Window x:Class="Uygulama9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uygulama9"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" x:Name="TbSayi" Height="30" Width="150"/>
        <Button Grid.Row="1" x:Name="BtnHesapla" Height="70" Width="100" Content="Hesapla" Click="BtnHesapla_Click"/>
        <Button Grid.Row="2" x:Name="BtnPerformans" Height="70" Width="100" Content="Performans Ölç" Click="BtnPerformans_Click"/>
    </Grid>
</Window>
