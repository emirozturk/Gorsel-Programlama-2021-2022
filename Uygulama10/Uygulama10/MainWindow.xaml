<Window x:Class="Uygulama10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uygulama10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="BtnEkle" Content="Ekle" Margin="5" Click="BtnEkle_Click" Width="100" FontSize="24"/>
            <TextBox x:Name="TbAranan" Width="250" Margin="5"/>
            <Button x:Name="BtnSil" Content="Sil" Margin="5" Click="BtnSil_Click" Width="100" FontSize="24"/>
            <Button x:Name="BtnAra" Content="Ara" Margin="5" Click="BtnAra_Click" Width="100" FontSize="24"/>
        </StackPanel>
        <WrapPanel x:Name="WpTuslar" Grid.Row="1"></WrapPanel>
        <ListBox x:Name="LbBilesenler" Grid.Row="2" FontSize="22"/>
    </Grid>
</Window>
