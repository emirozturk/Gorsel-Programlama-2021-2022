<Window x:Class="Uygulama7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uygulama7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="BtnDosyaAc" Content="Dosya Aç" Margin="5" Click="BtnDosyaAc_Click"/>
            <Button x:Name="BtnDosyayaYaz" Content="Dosyaya Yaz" Margin="5" Click="BtnDosyayaYaz_Click"/>
        </StackPanel>
        <TextBox x:Name="TbText" Grid.Row="1" FontSize="24" AcceptsReturn="True" TextWrapping="Wrap" Margin="5"/>
    </Grid>
</Window>
