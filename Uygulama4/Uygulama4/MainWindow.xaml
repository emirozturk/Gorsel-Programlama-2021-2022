<Window x:Class="Uygulama4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uygulama4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="750" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Label Content="Numara" FontSize="26"/>
            <TextBox x:Name="TbNumara" Width="250" FontSize="26" TextChanged="TbNumara_TextChanged" />
            <Label Content="Ad Soyad" FontSize="26"/>
            <TextBox x:Name="TbAdSoyad" Width="250" FontSize="26"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button x:Name="BtnEkle" Content="Ekle" Margin="3" Width="740" FontSize="26" Click="BtnEkle_Click" />
        </StackPanel>
        <ListBox x:Name="LbListe" Grid.Row="2" FontSize="26" Margin="3"/>
    </Grid>
</Window>
